<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapBookingApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CapBookingApp.MVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown text-capitalize">
                            <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                               style="cursor: pointer;" aria-haspopup="true"
                               aria-expanded="false">
                                Cab
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" asp-controller="Cab" asp-action="Add">Add Cab</a>
                                <a class="dropdown-item" asp-controller="Cab" asp-action="Delete">Delete Cab</a>
                                <a class="dropdown-item" asp-controller="Cab" asp-action="Update">Update Cab</a>
                                <a class="dropdown-item" asp-controller="Cab" asp-action="List">Show Cab List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown text-capitalize">
                            <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                               style="cursor: pointer;" aria-haspopup="true"
                               aria-expanded="false">
                                Booking
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" asp-controller="Booking" asp-action="Add">Add Booking</a>
                                <a class="dropdown-item" asp-controller="Booking" asp-action="Delete">Delete Booking</a>
                                <a class="dropdown-item" asp-controller="Booking" asp-action="Update">Update Booking</a>
                                <a class="dropdown-item" asp-controller="Booking" asp-action="List">Show Booking List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown text-capitalize">
                            <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                               style="cursor: pointer;" aria-haspopup="true"
                               aria-expanded="false">
                                History
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" asp-controller="History" asp-action="Add">Add History</a>
                                <a class="dropdown-item" asp-controller="History" asp-action="Delete">Delete History</a>
                                <a class="dropdown-item" asp-controller="History" asp-action="Update">Update History</a>
                                <a class="dropdown-item" asp-controller="History" asp-action="List">Show History List</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown text-capitalize">
                            <a class="nav-link dropdown-toggle" id="dropdown01" data-toggle="dropdown"
                               style="cursor: pointer;" aria-haspopup="true"
                               aria-expanded="false">
                                Place
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdown01">
                                <a class="dropdown-item" asp-controller="Place" asp-action="Add">Add Place</a>
                                <a class="dropdown-item" asp-controller="Place" asp-action="Delete">Delete Place</a>
                                <a class="dropdown-item" asp-controller="Place" asp-action="Update">Update Place</a>
                                <a class="dropdown-item" asp-controller="Place" asp-action="List">Show Place List</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CapBookingApp.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
